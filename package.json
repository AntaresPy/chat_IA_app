{
  "name": "deepseek-electron-chat",
  "version": "1.0.0",
  "description": "Chat Electron + Mongo + DeepSeek con IPC seguro",
  "main": "main.js",
  "type": "commonjs",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "prod": "cross-env NODE_ENV=production electron .",
    "pack:win": "electron-builder --win --dir",
    "installer": "iscc installer.iss /DAppVersion=%npm_package_version% /DSourceDir=dist\\win-unpacked /DAppName=\"DeepSeek Chat\" /DAppExe=\"DeepSeek Chat.exe\""
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^17.2.3",
    "mongodb": "^6.8.0",
    "sweetalert2": "^11.26.3"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^32.3.3",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.starsoft.deepseekchat",
    "productName": "DeepSeek Chat",
    "extraResources": [
      ".env"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "chat.html",
      "renderer.js",
      "chat.js",
      "style.*.css",
      "srv/**",
      "resources/**",
      "vendor/**/*",
      "package.json"
    ],
    "win": {
      "icon": "resources/icono.ico",
      "target": [
        "dir"
      ]
    }
  }
}
